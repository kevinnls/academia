<!doctype html>
<html>
	<head>
		{%if title %}
			<title>{{ title | append: " | " | append: site.name }}</title>
		{%else%}
			<title>{{ site.name }}</title>
		{%endif%}
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width,initial-scale=1.0">
		<meta name="description" content="{{ desc | default: site.desc }}">
		<link rel="stylesheet" href="/3rdparty/pico.min.css">
		<link rel="stylesheet" href="/aca.css">
	</head>
	<body style="min-height:100dvh;min-height:100vh;display:flex;flex-direction:column;">
		{%- unless header==false -%}
			<header style="padding-left:var(--pico-block-spacing-horizontal);padding-right:var(--pico-block-spacing-horizontal);">
				<h1><a style="text-decoration:none" href="/">{{ site.name }}</a></h1>
			</header>
		{%- endunless -%}
		<main class="container" style="flex-grow:2;">
		{{ content }}
		</main>
		{%- unless footer==false -%}
		<footer style="text-align:center">
			&copy; Kevin Samuel
		</footer>
		{%- endunless -%}
	</body>
</html>
