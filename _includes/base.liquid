<!doctype html>
<html>
	<head>
		{%if title %}
			<title>{{ title | append: " | " | append: site.name }}</title>
		{%else%}
			<title>{{ site.name }}</title>
		{%endif%}
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width,initial-scale=1.0">
		<meta name="description" content="{{ desc | default: site.desc }}">
		<link rel="stylesheet" href="/3rdparty/pico.min.css">
		<link rel="stylesheet" href="/aca.css">
	</head>
	<body class=".grid" style="min-height:100dvh;min-height:100vh;">
		<header>
			<h1>{{ site.name }}</h1>
		</header>
		<main class="container">
		{{ content }}
		</main>
		<footer>
		</footer>
	</body>
</html>
